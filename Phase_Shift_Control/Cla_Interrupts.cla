#include "F28x_Project.h"
#include "Cla_Interrupts.h"
#include "user_def.h"
Cla_Evag EVAG_N1;
Cla_Control_N CnlVar_N1;

Uint16 phase_shift_int;
float phase_shift;
float phase_shift_raw;
float phase_shift_last;
float iref_last;
float io_last;
float io_raw;
float PartP;
float PartI;

//Triggered by driver signal, frequency:1/fs
__attribute__((interrupt)) void claTask1(void)
{
    //Filtering, Bandwidth:
        Cla_Avg_Run(&EVAG_N1);
    //Pulse Generation through TripZone force/clear
        //Disable PWM (without protection)
        if(EPwm4Regs.CMPB.bit.CMPB  > EPwm4Regs.TBCTR &&(!Prt_flag))
        {
            __meallow();
            EPwm2Regs.TZFRC.bit.OST = 1;
            EPwm1Regs.TZFRC.bit.OST = 1;
            __medis();
        }
        //Enable PWM (without protection)
        else if(!Prt_flag)
        {
            __meallow();
            EPwm2Regs.TZCLR.bit.OST = 1;
            EPwm1Regs.TZCLR.bit.OST = 1;
            __medis();
        }

        else
        {

        }

}

//Triggered by Pulse signal, frequency:1/f_pulse
__attribute__((interrupt)) void claTask2(void)
{
    //PI Tustin Discretization: y = (Kp + Ki/s)*u = (Kp + Ki*T/2*(1+Z^-1)/(1-Z^-1))*u
    io    = EVAG_N1.out;

    //Discretized PI controller
    PartP = Kp*(iref-io*I_scaling_Ctr/RX_SC_General) - Kp*(iref_last-io_last*I_scaling_Ctr/RX_SC_General);
    PartI = Ki*Tpulse/2.0*(iref-io*I_scaling_Ctr/RX_SC_General) + Ki*Tpulse/2.0*(iref_last-io_last*I_scaling_Ctr/RX_SC_General);
    phase_shift_raw = PartP + PartI + phase_shift_last;
    //Without Anti-Windup currently
    //Saturation
    if (phase_shift_raw < CnlVar_N1.umin)
    {
        phase_shift = CnlVar_N1.umin;
    }
    else if (phase_shift_raw > CnlVar_N1.umax)
    {
        phase_shift = CnlVar_N1.umax;
    }
    else
    {
        phase_shift = phase_shift_raw;
    }
    //phase shift update
    phase_shift_int =  (Uint16)(phase_shift*256*(McuClk/Fs/1000));

    EPwm2Regs.TBPHS.bit.TBPHS = phase_shift_int >> 8;
    EPwm2Regs.TBPHS.bit.TBPHSHR =  (Uint16)((0xFF - ((Uint16)phase_shift_int >> 8)) << 8);
    //Interupt clr, enable further interrupts
    EPwm4Regs.ETCLR.bit.INT = 1;
    //save variables
    phase_shift_last = phase_shift;
    iref_last = iref;
    io_last = io;
}
