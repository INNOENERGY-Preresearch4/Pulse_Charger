//Triggered by SW force
__attribute__((interrupt)) void claTask7(void)
{

    //Init variables
    EVAG_N1.mult = 0.003f;
    EVAG_N1.mult2 = 1.0f - EVAG_N1.mult;
    EVAG_N1.out  = 0.0f;

    CnlVar_N1.a1 = 1.0f;
    CnlVar_N1.ek1 = 0.0f;
    CnlVar_N1.uk1 = 0.0f;
    CnlVar_N1.umax = 0.48f;
    CnlVar_N1.umin = 0.00f;

    phase_shift = 0.0f;
    phase_shift_last = 0.0f;
    phase_shift_int = 0;
    iref_last = 0.0f;
    io_last = 0.0f;
    PartP = 0.0f;
    PartI = 0.0f;
}
